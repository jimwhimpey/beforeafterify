{
  "name": "gif-maker",
  "version": "1.0.0",
  "description": "Before/After animated GIF creator",
  "main": "dist/server.js",
  "scripts": {
    "dev": "concurrently \"tsx watch src/server.ts\" \"esbuild client/app.ts --bundle --outfile=public/app.js --platform=browser --watch\"",
    "build": "tsc && esbuild client/app.ts --bundle --outfile=public/app.js --platform=browser --minify",
    "start": "npm run build && node dist/server.js"
  },
  "dependencies": {
    "@napi-rs/canvas": "^0.1.51",
    "express": "^4.18.2",
    "gif-encoder-2": "^1.0.5",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.11.5",
    "concurrently": "^8.2.2",
    "esbuild": "^0.19.12",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
